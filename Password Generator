import random
import string


länge = int(input("Wie lange soll dein Passwort sein?"))




print("""
       1. Buchstaben
       2. Zahlen
       3. Sonderzeichen
       4. Quit"""
)
CharacterList = ""

while True:
    choice = int(input("Wähle aus von (1-4): "))

    if choice == 1:
        CharacterList += string.digits
    elif choice == 2:
        CharacterList += string.ascii_letters
    elif choice == 3:
        CharacterList += string.punctuation
    elif choice == 4:
        break

Password = []

for i in range(länge):
    randomchar = random.choice(CharacterList)

    Password.append(randomchar)

print(f"Das Passwort ist {Password}")
